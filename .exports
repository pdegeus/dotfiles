# Make vim the default editor
export EDITOR="vim"

# Larger bash history (allow 32³ entries; default is 500)
export HISTSIZE=32768
export HISTFILESIZE=$HISTSIZE
export HISTCONTROL=ignoredups
# Make some commands not show up in history
export HISTIGNORE="ls:ll:l:la:cd:cd -:pwd:exit:date:* --help"

# Prefer US English and use UTF-8
export LANG="en_US"
export LC_ALL="en_US.UTF-8"

# Highlight section titles in manual pages
export LESS_TERMCAP_md="$ORANGE"

# Don’t clear the screen after quitting a manual page
export MANPAGER="less -X"

# Change directory colors from dark blue
export CLICOLOR=1
export LSCOLORS=Hxfxcxdxbxegedabagacad
export LS_COLORS="ow=01;97:di=01;97"

# Java options
[ -e /usr/libexec/java_home ] && export JAVA_HOME=`/usr/libexec/java_home -v 1.7`
export MAVEN_OPTS="-XX:MaxPermSize=256m -Xms512m -Xmx1024m"
export GROOVY_HOME=`ls -d /opt/groovy-* 2>/dev/null || ls -d /usr/local/groovy-* 2>/dev/null`
export JBOSS_HOME=`ls -d /opt/jboss* 2>/dev/null || ls -d /usr/local/jboss* 2>/dev/null`
export WILDFLY_HOME=`ls -d /opt/wildfly 2>/dev/null || ls -d /usr/local/wildfly 2>/dev/null`

# Apache user
export APACHE_RUN_USER=www-data
export APACHE_RUN_GROUP=www-data

# Always enable colored `grep` output
export GREP_OPTIONS="--color=auto"

# Link Homebrew casks in `/Applications` rather than `~/Applications`
export HOMEBREW_CASK_OPTS="--appdir=/Applications"
